.container
  #rangeLanding.jumbotron
    .titles
      .container
        %h3 {{campaigns.length < 1 ? "" : campaigns[0].title }}
      .container
        %h1
          %b Voting Ballot
      .container
        %h1#small {{ballot.ballot.starts_at | date:'yyyy'}}/{{ballot.ballot.starts_at | date:'MMMM'}}
  %br
    %form
      .fields{"ng-repeat" => "field in ballot.ballot_registration_fields"}
        .form-group
          %label{:for => "exampleInputEmail1"} {{field.name}}
          %input.form-control{:id => "{{field.id}}", :placeholder => "{{field.description}}", :type => "text", "ng-model" => "field.user_input"}
      %button.btn.btn-default{"ng-click" => "generateSignature()", :type => "submit"}
        Begin Voting
  %br
  %h1.text-center
    OR
  %form
    .form-group
      %label{:for => "signature"}
        Signature
      %input.form-control{:name => "signature", :placeholder => "Enter your ballot paper signature", "ng-model" => "signature", :required => true, :type => "text", "ng-minlength" => 1}
    %button.btn.btn-default{"ng-click" => "loadBallotPaper()", :type => "submit"}
      Load my votes
